{
  "expo": {
    "name": "Aureynx Wildlife Corridors",
    "slug": "aureynx-wildlife-corridors",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/images/Aureynx_Logo.png",
    "scheme": "aureynx",
    "userInterfaceStyle": "automatic",
    "newArchEnabled": true,
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "com.aureynx.wildlifecorridors",
      "infoPlist": {
        "NSLocationWhenInUseUsageDescription": "This app uses your location to show wildlife corridor data and nearby alerts.",
        "NSLocationAlwaysAndWhenInUseUsageDescription": "This app uses your location to track patrol routes and wildlife movements."
      }
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/images/Aureynx_Logo.png",
        "backgroundColor": "#D76B27"
      },
      "edgeToEdgeEnabled": true
    },
    "web": {
      "bundler": "metro",
      "output": "static",
      "favicon": "./assets/images/Aureynx_Logo.png"
    },
    "plugins": [
      "expo-router",
      "expo-local-authentication",
      [
        "expo-splash-screen",
        {
          "image": "./assets/images/Aureynx_Logo.png",
          "imageWidth": 200,
          "resizeMode": "contain",
          "backgroundColor": "#D76B27"
        }
      ],
      [
        "@rnmapbox/maps",
        {
          "RNMapboxMapsImpl": "mapbox",
          "RNMAPBOX_MAPS_DOWNLOAD_TOKEN": "pk.eyJ1IjoiamFtbXktbCIsImEiOiJjbWd0YWRmNnAwMjZwMmpyN252a2d2ajd1In0.M0mjFFqLPLGPfz2mEFNBKA"
        }
      ]
    ],
    "experiments": {
      "typedRoutes": true
    }
  }
}
